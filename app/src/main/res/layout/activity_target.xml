<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.projectZero.TargetActivity">

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/targetSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mt_hint="请输入烟草专卖许可证号"
        app:mt_maxSuggestionsCount="10"
        app:mt_roundedSearchBarEnabled="true"
        app:mt_searchIconUseTint="true"
        app:mt_searchIconTint="@color/tbgreen"
        app:mt_searchIconDrawable="@drawable/tobacco_logo"
        app:mt_backIconUseTint="true"
        app:mt_backIconTint="@color/tbgreen"
        app:mt_clearIconUseTint="true"
        app:mt_clearIconTint="@color/tbgreen"
        app:mt_textCursorTint="@color/tbgreen"
        app:mt_placeholderColor="@color/tbgreen"
        app:mt_placeholder="\t\t\t\t\t\t\t\t请输入烟草专卖许可证号"
        app:mt_speechMode="false" >

    </com.mancj.materialsearchbar.MaterialSearchBar>

    <ScrollView
        android:layout_width="340dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/targetSearchBar"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="27dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="许可证号："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetLicenseID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业（字号）名称"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetCommerceNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经营地址："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetAddressID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="map"
                android:text="@string/unknown"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法人姓名："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetHandlerID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法人身份证号："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetIDNumID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法人身份证地址："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetIDAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人姓名："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetContactNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人电话："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetContactNumID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/unknown"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>



</RelativeLayout>
